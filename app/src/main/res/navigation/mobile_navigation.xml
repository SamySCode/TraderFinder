<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_confirmed_jobs"
        android:name="com.example.traderfinder.ui.confirmed.ConfirmedJobsFragment"
        android:label="@string/title_Confirmed"
        tools:layout="@layout/fragment_confirmed_jobs" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.traderfinder.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_completed_jobs"
        android:name="com.example.traderfinder.ui.completed.CompletedJobsFragment"
        android:label="@string/title_Completed"
        tools:layout="@layout/fragment_completed_jobs" />
</navigation>